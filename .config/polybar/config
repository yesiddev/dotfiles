# ---- Global Settings -----
[global/wm]
margin-top = 0
margin-bottom = 0

# ---- Colors -----
[colors]
background = #26f5f6f7
background-alt = #40f5f6f7
foreground = #ffffff
foreground-alt = #40ffffff
alert = #f27835


# ----- Bar -----
[bar/main]
monitor = 
monitor-fallback =
monitor-strict = false
override-redirect = false
top = true
fixed-center = true
width = 100%
height = 24
offset-x = 0%
offset-y = 0%
background = ${colors.background}
foreground = ${colors.foreground}
radius-top = 0.0
radius-bottom = 0.0
padding-right = 2
module-margin-left = 0
module-margin-right = 0

font-0 = Roboto:style=Medium:size=11;2
font-1 = Font Awesome 5 Free Solid:style=Regular:size=11;2
font-2 = Font Awesome 5 Brands:style=Regular:size=11;2

modules-left = workspaces title
modules-center =
modules-right = keyboard updates date

tray-position = right
tray-maxsize = 16
tray-background = ${colors.background}
tray-padding = 6

# ----- Modules -----
# Workspaces
[module/workspaces]
type = internal/xworkspaces
pin-workspaces = true
enable-click = true
enable-scroll = false

icon-0 = 1;
icon-1 = 2;
icon-2 = 3;
icon-3 = 4;
icon-4 = 5;
icon-default = 

format = <label-state>
format-padding = 0

label-monitor = %name%
label-active = %icon%
label-active-foreground = ${colors.foreground}
label-active-background = ${colors.background-alt}
label-occupied = %icon%
label-occupied-foreground = ${colors.foreground}
label-urgent = %icon%
label-urgent-foreground = ${colors.alert}
label-empty = %icon%
label-empty-foreground = ${colors.foreground-alt}
label-active-padding = 2
label-urgent-padding = 2
label-occupied-padding = 2
label-empty-padding = 2

# Window title
[module/title]
type = internal/xwindow
format = <label>
format-padding = 2
label = %title%
label-maxlen = 50
label-empty = Desktop

# Num/Caps Lock Indicator
[module/keyboard]
type = internal/xkeyboard
blacklist-0 = scroll lock

format = <label-indicator>
format-spacing = 2

indicator-icon-0 = caps lock;;A 
indicator-icon-1 = num lock;1;

label-indicator-on = %icon%
label-indicator-off = %icon%

# Updates
[module/updates]
type = custom/script
exec = ~/.config/polybar/scripts/updates.sh
tail = true
interval = 5

format = <label>
format-prefix = " "
format-padding = 2

label = %output%

click-left = exec alacritty -e yay -Syu --noconfirm

# Date
[module/date]
type = internal/date
interval = 1.0

time = %I:%M %p

date-alt = %a, %d %B
time-alt = %I:%M %p

label = %date% %time%

# ----- Settings -----
[settings]
throttle-output = 5
throttle-output-for = 10
screenchange-reload = false
pseudo-transparency = true
override-redirect = true
wm-restack = bspwm

; vim:ft=dosini
