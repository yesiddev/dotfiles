##!/bin/sh

## Environment Variables ###

# Default folders
export XDG_CONFIG_HOME="$HOME/.config"
export QT_STYLE_OVERRIDE=kvantum

userresources=$HOME/.Xresources
usermodmap=$HOME/.Xmodmap
sysresources=/etc/X11/xinit/.Xresources
sysmodmap=/etc/X11/xinit/.Xmodmap

# merge in defaults and keymaps

if [ -f $sysresources ]; then
    xrdb -merge $sysresources
fi

if [ -f $sysmodmap ]; then
    xmodmap $sysmodmap
fi

if [ -f "$userresources" ]; then
    xrdb -merge "$userresources"
fi

if [ -f "$usermodmap" ]; then
    xmodmap "$usermodmap"
fi

# Path
export PATH=/usr/local/bin:/opt/local/bin:$HOME/bin:$HOME/.local/bin:$PATH

# Screen
xrandr --output DVI-I-1 --off --output HDMI-1 --primary --mode 2560x1080 --pos 0x0 --rotate normal --output VGA-1 --off

# Disable screenlock
xset -dpms
xset s noblank
xset s off

# Default programs at start
setxkbmap es &
nm-applet &
picom -f &
udiskie -Nt &
volumeicon &
lxsession &
feh --bg-fill ~/Wallpapers/luke.jpg &
numlockx &
